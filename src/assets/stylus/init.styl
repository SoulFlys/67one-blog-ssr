@charset "UTF-8"
// @import '../css/reset.css'
@import "./constant"
@import "./function"

::-webkit-scrollbar
    width: 8px
    height: 8px
    background-color: #B9B9B9

::-webkit-scrollbar-track
    border-radius: 10px
    background-color: #B9B9B9

::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: #2B394E


::selection
    background: #A0DAD0
    color: #fff


input:-webkit-autofill
    box-shadow: 0 0 0px 1000px white inset


.view
    padding-top:100px

#app
    overflow:hidden

.page
    width: 100%
    padding: 20px 0
    text-align: center
    margin: 80px 0
    user-select: none
    a
        padding: 13px 35px;
        border: 1px solid $loadMore-border
        border-radius: 50px
        color: $loadMore-title
        cursor: pointer
        &:hover
            border: 1px solid $loadMore-borderHover
            color: $loadMore-titleHover
        &.loadingMore
            background: url('./assets/imgs/postload.gif') center no-repeat
            color: #555
            border: none
            &:hover
                border:none


@media (max-width:800px){
#app{
    header{
        height:56px;
        padding:5px;
        border-bottom: 0;
        .header-con{
            width:100%;
            nav{
                margin:0;
                ul{
                    li{
                        a{
                            padding: 0 10px;
                        }
                    }
                }
            }
            .logo{
                height:56px;
                a{
                    img{
                        margin:3px 0;
                    }
                }
            }
        }
    }
    .content{
        padding:0 15px
        box-sizing: border-box
    }
    .banner{
        display: none;
        .banner-center{
            .banner-info{
                width:100%;
            }
        }
    }
    .index{
        &.view{
            padding-top: 56px;
        }
        .content{
            width:100%;
            .notice{
                margin-bottom: 40px;
            }
            .con{
                padding: 0;
                article{
                    .art-pic{
                        display: none
                    }
                    .art-con{
                        width:100%;
                        padding-left: 0;
                    }
                }
            }
        }
    }
    .archive{
        width:100%;
        padding:60px 15px 0
        box-sizing: border-box
    }
    .links{
        width:100%;
        padding:60px 15px 0
        box-sizing: border-box
        .con{
            .link-ul{
                .link-li{
                    width:100%
                }
            }
        }

    }
    .article{
        width:100%;
        padding:60px 15px 0
        box-sizing: border-box
    }
    aside{
        .goTop{
            right:0;
            border-radius: 0
        }
    }
}
}



.heart
    width: 10px
    height: 10px
    position: fixed
    z-index:110
    background: #f00
    transform: rotate(45deg)
    &:after,&:before
        content: ''
        width: inherit
        height: inherit
        background: inherit
        border-radius: 50%
        position: absolute
    &:after
        top: -5px
    &:before
        left: -5px
